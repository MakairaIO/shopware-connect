<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="makaira_connect.subscriber.event.shopware"
                 class="MakairaConnect\Subscriber\ShopwareSubscriber">

            <tag name="shopware.event_subscriber" />
        </service>

        <service id="makaira_connect.subscriber.event.doctrine"
                 class="MakairaConnect\Subscriber\DoctrineSubscriber">

            <tag name="doctrine.event_subscriber" />
        </service>

        <service id="makaira_connect.mapper" class="MakairaConnect\Mapper\EntityMapper" public="true">
            <argument type="service" id="router"/>
            <argument type="service" id="models"/>
            <argument type="service" id="shopware_media.media_service"/>
            <argument type="service" id="shopware_storefront.price_calculator"/>
            <argument type="service" id="shopware_storefront.context_service"/>
        </service>

        <service id="MakairaConnect\Command\TouchAllCommand">
            <tag name="console.command" />
        </service>
    </services>
</container>
