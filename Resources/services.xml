<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="makaira_connect.changes.manager" class="MakairaConnect\Changes\Manager">
            <argument type="service" id="shopware.model_manager" />
            <argument type="service" id="dbal_connection" />
        </service>
        <service id="makaira_connect.changes.event_subscriber" class="MakairaConnect\Changes\EventSubscriber">
            <argument type="service" id="makaira_connect.changes.manager" />
            <tag name="shopware.event_subscriber" />
        </service>
    </services>
</container>