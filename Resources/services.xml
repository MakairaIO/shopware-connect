<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="makaira_connect.subscriber.event.shopware"
                 class="MakairaConnect\Subscriber\ShopwareSubscriber">
        
            <tag name="shopware.event_subscriber" />
        </service>
        
        <service id="makaira_connect.subscriber.event.doctrine"
                 class="MakairaConnect\Subscriber\DoctrineSubscriber">
            
            <tag name="doctrine.event_subscriber" />
        </service>

        <service id="makaira_connect.mapper.product" class="MakairaConnect\Mapper\ProductMapper">
            <tag name="makaira_connect.mapper" />
        </service>

        <service id="makaira_connect.mapper.variant" class="MakairaConnect\Mapper\VariantMapper">
            <tag name="makaira_connect.mapper" />
        </service>

        <service id="makaira_connect.mapper.category" class="MakairaConnect\Mapper\CategoryMapper">
            <tag name="makaira_connect.mapper" />
        </service>

        <service id="makaira_connect.mapper.manufacturer" class="MakairaConnect\Mapper\ManufacturerMapper">
            <tag name="makaira_connect.mapper" />
        </service>

        <service id="makaira_connect.mapper" class="MakairaConnect\Mapper\MapperPool"/>
    </services>
</container>
